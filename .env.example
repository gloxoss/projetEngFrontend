# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/department_manager"

# Authentication
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
COOKIE_SECRET="another-secret-key-for-cookies-change-this-too"

# JWT (if used)
JWT_SECRET="jwt-secret-key-for-token-generation"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# File Upload (if needed)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB

# Email Configuration (if needed)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
EMAIL_FROM="Department Manager <noreply@example.com>"

# Client URL
CLIENT_URL="http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window
