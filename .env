# Spring Boot Backend Configuration
SPRING_BOOT_API_URL="http://localhost:8080/api"

# Client Configuration
PORT=5000
NODE_ENV=development

# MySQL Database Configuration
DATABASE_URL="mysql://root:@localhost:3306/gestion_ressources?useSSL=false&serverTimezone=UTC&createDatabaseIfNotExist=true"

# Spring Boot Database Configuration (used in application.properties)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=gestion_ressources
MYSQL_USER=root
MYSQL_PASSWORD=

# Authentication
JWT_SECRET="jwt-secret-key-for-token-generation"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:5000"

# File Upload (if needed)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB

# Client URL
CLIENT_URL="http://localhost:5000"

# Logging
LOG_LEVEL="debug"